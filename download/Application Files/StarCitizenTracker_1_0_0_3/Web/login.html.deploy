<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login - Star Citizen Tracker</title>
    <style>
        :root {
            --color-light: #aba9a2;
            --color-dark: #18140c;
            --accent-color: #d05252;
            --primary-color: var(--color-dark);
            --secondary-color: var(--color-light);
        }

        body.dark-mode {
            --primary-color: var(--color-dark);
            --secondary-color: var(--color-light);
        }

        body.light-mode {
            --primary-color: var(--color-light);
            --secondary-color: var(--color-dark);
        }

        ::-webkit-scrollbar {
            width: 12px;
        }

        ::-webkit-scrollbar-track {
            background: var(--primary-color);
        }

        ::-webkit-scrollbar-thumb {
            background: var(--secondary-color);
            border: 2px solid var(--primary-color);
            cursor: pointer;
        }

        ::-webkit-scrollbar-thumb:hover {
            background: var(--secondary-color);
            opacity: 0.8;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: Arial, sans-serif;
            background-color: var(--primary-color);
            color: var(--secondary-color);
            overflow: hidden;
            -webkit-user-select: none;
            user-select: none;
        }

        .window-container {
            width: 680px;
            height: 720px;
            background-color: var(--primary-color);
            border: 2px solid var(--secondary-color);
            position: relative;
        }

        /* Window Controls */
        .window-controls {
            position: absolute;
            top: 40px;
            right: 40px;
            display: flex;
            gap: 0;
            z-index: 1000;
        }

        .window-btn {
            width: 50px;
            height: 50px;
            background-color: transparent;
            border: 2px solid var(--secondary-color);
            color: var(--secondary-color);
            cursor: pointer;
            font-size: 24px;
            display: flex;
            align-items: center;
            justify-content: center;
            transition: all 0.2s;
        }

        .window-btn:hover {
            background-color: var(--secondary-color);
            color: var(--primary-color);
        }

        .settings-btn {
            position: absolute;
            top: 40px;
            left: 40px;
            width: 50px;
            height: 50px;
            background-color: transparent;
            border: 2px solid var(--secondary-color);
            color: var(--secondary-color);
            cursor: pointer;
            font-size: 24px;
            display: flex;
            align-items: center;
            justify-content: center;
            transition: all 0.2s;
            z-index: 1000;
        }

        .settings-btn:hover {
            background-color: var(--secondary-color);
            color: var(--primary-color);
        }

        /* Content */
        .content-panel {
            position: absolute;
            left: 40px;
            top: 130px;
            width: 600px;
            height: 550px;
            border: 2px solid var(--secondary-color);
            background-color: var(--primary-color);
            display: flex;
            flex-direction: column;
        }

        .title-section {
            height: 120px;
            display: flex;
            align-items: center;
            justify-content: center;
            border-bottom: 2px solid var(--secondary-color);
            font-size: 20px;
            letter-spacing: 8px;
            text-transform: uppercase;
        }

        .form-area {
            padding: 40px 40px 40px 40px;
            display: flex;
            flex-direction: column;
            flex: 1;
            position: relative;
        }

        .form-label {
            font-size: 10px;
            letter-spacing: 3px;
            opacity: 0.5;
            margin-bottom: 8px;
            text-transform: uppercase;
        }

        .input-panel {
            width: 520px;
            height: 60px;
            border: 2px solid var(--secondary-color);
            padding: 0 25px;
            margin-bottom: 35px;
            background-color: var(--primary-color);
        }

        .input-panel input {
            width: 100%;
            height: 100%;
            border: none;
            outline: none;
            background: transparent;
            color: var(--secondary-color);
            font-family: Arial, sans-serif;
            font-size: 12px;
        }

        .input-panel input::placeholder {
            color: var(--secondary-color);
            opacity: 0.3;
        }

        .input-panel:focus-within {
            background-color: var(--secondary-color);
        }

        .input-panel:focus-within input {
            color: var(--primary-color);
        }

        .input-panel:focus-within input::placeholder {
            color: var(--primary-color);
        }

        .login-button {
            width: 520px;
            height: 65px;
            background-color: var(--secondary-color);
            color: var(--primary-color);
            border: 2px solid var(--secondary-color);
            font-size: 14px;
            letter-spacing: 8px;
            text-transform: uppercase;
            cursor: pointer;
            transition: all 0.2s;
            font-family: Arial, sans-serif;
        }

        .login-button:hover {
            background-color: var(--primary-color);
            color: var(--secondary-color);
        }

        .status-label {
            position: absolute;
            left: 40px;
            right: 40px;
            top: 345px;
            text-align: center;
            height: 30px;
            color: var(--accent-color);
            font-size: 11px;
            opacity: 0;
            pointer-events: none;
            transition: opacity 0.2s;
        }

        .status-label.show {
            opacity: 1;
        }

        .skip-button {
            width: 520px;
            height: 65px;
            background-color: var(--primary-color);
            color: var(--secondary-color);
            border: 2px solid var(--secondary-color);
            font-size: 14px;
            letter-spacing: 8px;
            text-transform: uppercase;
            cursor: pointer;
            transition: all 0.2s;
            font-family: Arial, sans-serif;
            margin-top: 40px;
        }

        .skip-button:hover {
            background-color: var(--secondary-color);
            color: var(--primary-color);
        }
    </style>
</head>
<body>
    <div class="window-container">
        <!-- Window Controls -->
        <button class="settings-btn" onclick="openSettings()">⚙</button>
        <div class="window-controls">
            <button class="window-btn" onclick="closeWindow()">×</button>
        </div>

        <!-- Content Panel -->
        <div class="content-panel">
            <div class="title-section">
                L O G I N
            </div>
            <div class="form-area">
                <div class="form-label">U S E R N A M E</div>
                <div class="input-panel">
                    <input type="text" id="username" placeholder="ENTER USERNAME" autocomplete="off">
                </div>

                <div class="form-label">P A S S W O R D</div>
                <div class="input-panel">
                    <input type="password" id="password" placeholder="ENTER PASSWORD">
                </div>

                <button class="login-button" onclick="attemptLogin()">L O G I N</button>
                
                <div class="status-label" id="statusLabel"></div>

                <button class="skip-button" onclick="skipLogin()">S K I P</button>
            </div>
        </div>
    </div>

    <script>
        // Theme Controller
        function initializeTheme() {
            const isDarkMode = localStorage.getItem('darkMode') === 'true';
            
            if (isDarkMode) {
                document.body.classList.add('dark-mode');
                document.body.classList.remove('light-mode');
            } else {
                document.body.classList.add('light-mode');
                document.body.classList.remove('dark-mode');
            }
        }

        // Initialize theme on page load
        document.addEventListener('DOMContentLoaded', initializeTheme);

        // C# <-> JS Bridge
        window.chrome.webview.addEventListener('message', event => {
            const data = event.data;
            
            if (data.action === 'loadTheme') {
                // Apply theme from C#
                const isDarkMode = data.darkMode !== undefined ? data.darkMode : true;
                if (isDarkMode) {
                    document.body.classList.add('dark-mode');
                    document.body.classList.remove('light-mode');
                } else {
                    document.body.classList.add('light-mode');
                    document.body.classList.remove('dark-mode');
                }
                localStorage.setItem('darkMode', isDarkMode);
            }
            
            if (data.action === 'fillCredentials') {
                // Pre-fill saved credentials
                if (data.username) {
                    document.getElementById('username').value = data.username;
                }
                if (data.password) {
                    document.getElementById('password').value = data.password;
                }
            }
            
            if (data.action === 'loginResult') {
                if (data.success) {
                    showStatus('LOGIN SUCCESSFUL!', false);
                    setTimeout(() => {
                        sendToCS({ action: 'closeWindow', success: true });
                    }, 500);
                } else {
                    showStatus(data.message || 'INVALID USERNAME OR PASSWORD', true);
                    document.getElementById('password').value = '';
                }
            }
        });

        function sendToCS(data) {
            window.chrome.webview.postMessage(data);
        }

        function attemptLogin() {
            const username = document.getElementById('username').value.trim();
            const password = document.getElementById('password').value;

            if (!username) {
                showStatus('USERNAME IS REQUIRED', true);
                return;
            }

            if (!password) {
                showStatus('PASSWORD IS REQUIRED', true);
                return;
            }

            hideStatus();
            
            // Send credentials to C#
            sendToCS({
                action: 'login',
                username: username,
                password: password
            });
        }

        function skipLogin() {
            sendToCS({ action: 'skip' });
        }

        function closeWindow() {
            sendToCS({ action: 'close' });
        }

        function openSettings() {
            sendToCS({ action: 'openSettings' });
        }

        function showStatus(message, isError) {
            const label = document.getElementById('statusLabel');
            label.textContent = message.toUpperCase();
            label.classList.add('show');
        }

        function hideStatus() {
            const label = document.getElementById('statusLabel');
            label.classList.remove('show');
        }

        // Enter key support
        document.getElementById('password').addEventListener('keypress', (e) => {
            if (e.key === 'Enter') {
                attemptLogin();
            }
        });

        document.getElementById('username').addEventListener('keypress', (e) => {
            if (e.key === 'Enter') {
                document.getElementById('password').focus();
            }
        });
    </script>
</body>
</html>
